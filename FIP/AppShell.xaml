<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FIP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FIP"
    xmlns:v="clr-namespace:FIP.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="FIP">

    <TabBar>
        <Tab Title="Stocks" >
            <ShellContent Title="Stocks" ContentTemplate="{DataTemplate v:StockPage}" Route="StocksPage" />
        </Tab>
        <Tab Title="Exchange" >
            <ShellContent Title="Exchange" ContentTemplate="{DataTemplate v:ExchangePage}" Route="ExchangePage" />
        </Tab>
    </TabBar>

</Shell>
